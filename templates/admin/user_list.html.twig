{# templates/admin/user_list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ 'label.listusers'|trans }} List{% endblock %}

{% block body %}
    <h1>{{ 'label.listusers'|trans }}</h1>
	<div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{  'label.id'|trans}}</th>
            <th>{{  'label.username'|trans}}</th>
            <th>{{  'label.email'|trans}}</th>
            <th>{{  'label.roles'|trans}}</th>
            <th>{{  'label.actions'|trans}}</th>
        </tr>
        </thead>
        <tbody>
        {% for user in pagination.items %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles | join(', ') }}</td>
                <td>
                    <a class="btn btn-outline-success" href="{{ path('admin_user_edit', {id: user.id}) }}">{{  'action.edit'|trans}}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
